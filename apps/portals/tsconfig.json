{
  "extends": "../../shared/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "e2e/**.ts",
    "e2e/**/**.ts",
    "playwright.config.ts"
  ],
  "files": ["src/types.d.ts"]
}
